<body class="d-flex flex-column vh-100">

<% if flash[:notice] %>
 <p id="notice">
   <%= flash[:notice] %>
 </p>
 <% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
 <div class="row">
 <div class="col-md-3">
 <h2>UserInfo</h2>
 <%= image_tag current_user.get_profile_image(100,100) %>
  <h3><%= current_user.name %></h3>
  <h3><%= current_user.introduction %></h3>

 <h2>New Books</h2>
 <%= form_with model: @book do |f| %>

  <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :opinion %>
 <%= f.submit 'Create Book' %>
 <% end %>
</div>
  <div class="col-md-8 offset-md-1">
<table class="table table-striped">
 <h1>Book detail</h1>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |b| %>
			<tr>
				<td><%= b.title %></td>
				<td><%= b.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>

</body>