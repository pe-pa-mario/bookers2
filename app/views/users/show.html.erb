<body class="d-flex flex-column vh-100">
 <script src="https://kit.fontawesome.com/d0a9bc3dab.js" crossorigin="anonymous"></script>



 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
 <div class="row">
 <div class="col-md-3">
 <h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
 <table class="table">
  <tbody>
   <tr></tr>
   <tr>
    <th>name</th>
    <th>
    <h3><%= @user.name %></h3>
    </th>
   </tr>
   <tr>
    <th>introduction</th>
    <th>
    <h3><%= @user.introduction %></h3>
    </th>
   </tr>
  </tbody>
 </table>

<div class="row">
 <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
 <i class= "fas fa-user-cog"></i>
 <% end %>

</div>



 <h2>New book</h2>
 <%= form_with model: @book do |f| %>

  <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
 <% end %>
</div>

  <div class="col-md-8 offset-md-1">
   <table class="table table-striped">
 <h1>Books</h1>
	<thead>
		<tr>
		 <th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="4"></th>
		</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
	 <tr>
	  <td><%= link_to user_path(@user.id) do %>
			<%= image_tag @user.get_profile_image(100,100) %>
			<% end %>
			</td>
