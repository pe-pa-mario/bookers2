<body class="d-flex flex-column vh-100">

<div class="container">
 <div class="row">
 <div class="col-md-3">
 <div>
 <h2>UserInfo</h2>
 <%= image_tag current_user.get_profile_image(100,100) %>
  <h3><%= current_user.name %></h3>
  <h3><%= current_user.introduction %></h3>
</div>


<h2>New Books</h2>
<%= form_with model: @book do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<table class="table table-striped">
 <h1>Books</h1>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do  |user| %>
			<tr>
				<td><%= image_tag user.get_profile_image(100,100) %></td>
				<td><%= user.name %></td>
				<td><%= link_to "Show", user_path(user.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>

</div>
</div>
</div>
</body>


